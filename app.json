{
  "expo": {
    "name": "AuraBeat-App",
    "slug": "AuraBeat-App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/AURA_BEATS_2.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/AURA_BEATS_2.png",
      "resizeMode": "contain",
      "backgroundColor": "red"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/AURA_BEATS_2.png",
        "backgroundColor": "red"
      },
      "edgeToEdgeEnabled": true,
      "UIBackgroundModes": ["audio"]
    },
    "web": {
      "favicon": "./assets/AURA_BEATS_2.png"
    },
    "plugins": [
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      "expo-background-task"
    ]
  }
}
